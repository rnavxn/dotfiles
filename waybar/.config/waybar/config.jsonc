    "hyprland/workspaces": {
        "rotate": 0,
        "all-outputs": true,
        "active-only": false,
        "on-click": "activate",
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "format": "{icon}",
        "persistent-workspaces": {
            "*": 5
        },
        "format-icons": {
            "1": "一",
            "2": "二",
            "3": "三",
            "4": "四",
            "5": "五",
            "6": "六",
            "7": "七",
            "8": "八",
            "9": "九",
            "10": "十",
            "11": "十一",
            "12": "十二",
            "13": "十三",
            "14": "十四",
            "15": "十五",
            "16": "十六",
            "17": "十七",
            "18": "十八",
            "19": "十九",
            "20": "二十",
            "urgent": "",
            "focused": "",
            "default": " "
        }
    },


    "wlr/taskbar": {
        "all-outputs": true,
        "active-first": true,
        "markup": true,
        "format": "{icon}",
        "rotate": "0",
        "icon-size": 26,
        "icon-theme": "Tela-nord-dark",
        "spacing": 0,
        "tooltip-format": "{title}{app_id}",
        "on-click": "activate",
        "on-click-right": "fullscreen",
        "on-click-middle": "close",
        "ignore-list": [
            ""
            //"Spotify Free"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition",
            "firefoxnightly": "firefox-nightly",
            "Spotify Free": "Spotify"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal",
            "Spotify Free": "Spotify",
            "org.kde.dolphin": "dolphin",
            "libreoffice-writer": "writer"
        }
    },

    // Modules Left
    "modules-left": [
        "hyprland/workspaces",
        "wlr/taskbar"
    ],

    // Modules Center
    "modules-center": [
        "idle_inhibitor",
        "clock",
    ],

    // Modules Right
    "modules-right": [
        "custom/updates",
        "pulseaudio",
        "backlight",
        "bluetooth",
        "network",
        "cpu",
        "custom/hypridle",
        "battery",
        "custom/exit"
    ],

    "idle_inhibitor": {
        "format": "{icon}",
        "rotate": 0,
        "format-icons": {
            "activated": " 󰅶 ",
            "deactivated": " 󰛊 "
        },
        "tooltip-format-activated":"Caffeine Mode Active",
        "tooltip-format-deactivated":"Caffeine Mode Inactive"
    },

    "backlight": {
        "device": "intel_backlight",
        "rotate": 0,
        "format": "{icon} {percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""],
        "tooltip-format": "{icon} {percent}% ",
        "min-length": 6
    },
}
