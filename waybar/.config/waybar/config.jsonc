    "include": [
        "~/.config/waybar/modules.json",
        "~/.config/waybar/modules/*"
    ],
    "layer": "top",
    "output": [ "*" ],
    "position": "top",
    "mod": "dock",
    "height": 30,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

