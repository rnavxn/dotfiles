{
    "clock": {
        "format": "{:%I:%M %p}",               // 09:24 PM
        "format-alt": "{:%d %B %Y}",           // 14 November 2025
        "on-click": "mode",
        "on-click-right": "hyprctl dispatch exec gsimplecal",
        "tooltip": true,
        "tooltip-format": "<span>{calendar}</span>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "format": {
                "months": "<span foreground='#ff7b47'><b>{}</b></span>",
                "weekdays": "<span foreground='wheat'><b>{}</b></span>",
                "today": "<span foreground='#ff6e6e'><b>{}</b></span>"
            }
        }
    }
}